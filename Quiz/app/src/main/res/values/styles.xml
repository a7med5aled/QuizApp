<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#6d6d6d</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#ffffff</item>
    </style>
    <!-- style for Another Answers -->
    <style name="Base.TextAppearance.AppCompat." parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">#F87431</item>
        <item name="android:inputType">textCapWords</item>
    </style>
</resources>
